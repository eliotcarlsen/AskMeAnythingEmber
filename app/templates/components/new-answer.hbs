{{#if newAnswerForm}}
  <h2>Respond!</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="response">Your Response</label>
        {{input value=response id="response" required=true}}
      </div>
      <div class="form-group">
        <label for="responder">Enter your name</label>
        {{input value=responder id="responder" required=true}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Click Here!</button>
{{/if}}
