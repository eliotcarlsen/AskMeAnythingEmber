{{#if addNewQuestion}}
  <h2>Ask Away!</h2>
  <div class="panel panel-default">
    <div class="panel-body">
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author" required=true}}
        </div>
        <div class="form-group">
          <label for="content">What's your question?</label>
          {{input value=content id="content" required=true}}
        </div>
        <div class="form-group">
          <label for="notes">Anything else to add?</label>
          {{input value=notes id="notes" required=true}}
        </div>
        <button class="btn btn-info" {{action 'saveQuestion'}}>Save</button>
      </form>
    </div>
  </div>
  {{else}}
    <button class="btn btn-info" {{action 'questionFormShow'}}>Click Here!</button>
  {{/if}}
