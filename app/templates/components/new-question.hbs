{{#if addNewQuestion}}
  <h2>Ask Away!</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author" required=true}}
      </div>
      <div class="form-group">
        <label for="content">What's your question?</label>
        {{input value=content id="content" required=true}}
      </div>
      <div class="form-group">
        <label for="notes">Anything else?</label>
        {{input value=notes id="notes" required=true}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>Click Here!</button>
  {{/if}}
